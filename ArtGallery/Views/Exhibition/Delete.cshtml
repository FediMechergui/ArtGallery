@model ArtGallery.Models.Exhibition
@{
    ViewData["Title"] = "Supprimer l'exposition";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-trash"></i> Supprimer l'exposition</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" class="form-control" readonly />
                        </div>
                        <div class="alert alert-warning">Êtes-vous sûr de vouloir supprimer cette exposition ? Cette action est irréversible.</div>
                        <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Supprimer</button>
                        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Annuler</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>
        .card-header h3 { display: flex; align-items: center; gap: 0.5rem; }
        .btn-danger i { margin-right: 0.5rem; }
    </style>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
