@model ArtGallery.Models.Exhibition
@{
    ViewData["Title"] = "Voir les détails de l'exposition";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Exhibition Image" class="img-fluid rounded mb-3" style="max-height:350px;object-fit:contain;" />
            }
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p class="text-muted">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</p>
            <h5 class="text-secondary">@Model.Location</h5>
            <p>@Model.Description</p>
            <dl class="row">
                <dt class="col-sm-4">Active</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToShortDateString()</dd>
                <dt class="col-sm-4">Mis à jour</dt>
                <dd class="col-sm-8">@(Model.UpdatedAt?.ToShortDateString() ?? "-")</dd>
            </dl>
            <a asp-action="Index" class="btn btn-secondary mt-3">Retour à la liste des expositions</a>
        </div>
    </div>
</div>
@section Styles {
    <style>
        .img-thumbnail { border: 2px solid #eee; margin-right: 4px; }
        h2 { margin-top: 0; }
        dl dt { font-weight: 500; }
    </style>
}
