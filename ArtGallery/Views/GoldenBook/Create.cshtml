@model ArtGallery.Models.GoldenBookEntry

@{
    ViewData["Title"] = "Signer le livre d'or";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Votre nom" />
                        <label asp-for="Name">Votre nom</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="adresse@example.com" />
                        <label asp-for="Email">Adresse e-mail</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Message" class="form-control" placeholder="Votre message" style="height: 150px"></textarea>
                        <label asp-for="Message">Votre message</label>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Signer le livre d'or</button>
                        <a asp-action="Index" class="btn btn-secondary">Retour à la liste des entrées</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 